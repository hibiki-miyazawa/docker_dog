<li id="micropost-<%= micropost.id %>">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user, class: "color" %></span>
    <span class="content">
        <%= micropost.content %>
        <%= image_tag micropost.image.url if micropost.image? %>
    </span>
    <span class="timestamp">
        Posted <%= time_ago_in_words(micropost.created_at) %> ago.
        <% if current_user?(micropost.user) %>
            <%= link_to "delete", micropost, method: :delete, data: { confirm: "削除してよろしいですか？"}, class: "delete btn btn-outline-success" %>
        <% end %>
    </span>
</li>