<%= provide(:title, @dog.name)%>
<div class="row">
    <aside class="col-md-5 jumbotron">
        <section>
            <h1><%= @dog.name %></h1>
            <br>
            <% if @dog.image_name.present? %>
                <%= image_tag("#{@dog.image_name}", :size => '200x250') %>
            <% else %>
                <%= link_to image_tag("/default.jpg", :size => '200x250') %>
            <% end %>
        </section>
        <section>
            <ul>
                <% if @dog.gender.present? %>
                    <li>性別 : <%= @dog.gender %></li>
                <% else %>
                    <li>性別 : 秘密</li>
                <% end %>
                <li>誕生日 : <%= @dog.birthday %></li>
                <% if @dog.breed.present? %>
                    <li>犬種 : <%= @dog.breed %></li>
                <% else %>
                    <li>犬種 : 秘密</li>
                <% end %>
                <li>病院 : <%= @dog.hospital %></li>
                <li>ドッグサロン : <%= @dog.salon %></li>
            </ul>
        </section>
        
        <div>
            <% if current_user?(@dog.user) %>
            <%= link_to "編集", edit_dog_path(@dog), class: "btn btn-outline-success" %>
            
            <%= link_to "削除", @dog, method: :delete, data: {confirm: "You sure?"}, class: "btn btn-outline-success" %>
            <% end %> 
        </div>
    </aside>
</div>

