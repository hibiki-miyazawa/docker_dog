<% provide(:title, "Edit dog") %>
<h1>Update <%=@dog.name%> profile</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@dog) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.label :gender %>
            <%= f.select :gender, [["male", "male"], ["female", "female"]], include_blank: "Please select" %>

            <%= f.label :birthday %>
            <%= f.date_select :birthday %>

            <%= f.label :"Dog breed" %>
            <%= f.text_field :breed %>

            <%= f.label :hospital %>
            <%= f.text_field :hospital %>

            <%= f.label :"Dog Salon" %>
            <%= f.text_field :salon %>

            <%= f.label :"Dog's image" %>

            <% if @dog.image_name? %>
            <%= image_tag @dog.image_name_url, size: "130x150" %>
            <% end %>
            <%= f.file_field :image_name %>

            <% if @dog.persisted? && @dog.image_name? %>
                <label>
                <%= f.check_box :remove_image_name %>
                Delete img
                </label>
            <% end %>

            <%= f.submit "Save change", class: "btn" %>
        <% end %>
    </div>
</div>