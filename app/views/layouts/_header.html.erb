<header class="navbar navbar-expand navbar-dark fixed-top" style="background-color: green">
  <div class="container">
    <%= link_to "Dog Life", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><%= link_to "ホーム", root_path, class: "nav-link" %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li class="nav-item"><%= link_to "(全ユーザー)", users_path, class: "nav-link" %></li>
          <% end %>
          <li class="nav-item"><%= link_to "マイページ", current_user, class: "nav-link" %></li>  
