<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4 jumbotron">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @page %></h3>
    <% if @users.any? %>
      <ul class="users follow scroll">
        <% @users.each do |user| %>
          <li>
            <%= link_to gravatar_for(user, size: 50), user %>
            <%= user.name %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>