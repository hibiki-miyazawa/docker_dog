<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <aside class="jumbotron">
            <section>
                <h1>
                    <%= @user.name %>
                    <br>
                    <%= gravatar_for @user %>
                    <br>
                    <%= @user.prefecture.name %>
                </h1>
            </section>
            <section class="stats">
                <%= render 'shared/stats' %>
            </section>
            <section>
                <div>
                    <% unless @user.id == current_user.id %>
                        <% if current_user.followed_by?(@user) && @user.followed_by?(current_user) %>
                            <% if @isRoom == true %>
                                <p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-outline-success">DM</a>
                            <% else %>
                                <%= form_for @room do |f| %>
                                    <%= fields_for @entry do |e| %>
                                        <%= e.hidden_field :user_id, value: @user.id %>
                                    <% end %>
                                    <%= f.submit "Direct Message", class: "btn btn-outline-success" %>
                                <% end %>
                            <% end %>
                        <% end %>
                    <% end %>
                </div>
            </section>
            <section>
                <% if current_user.admin? && !current_user?(@user)%>
                <%= link_to "User Settings", edit_user_path(current_user) %>
                <br>
                <%= link_to "Delete User", @user, method: :delete, data: {confirm: "You sure?"} %>
                <% elsif !current_user.admin? && current_user?(@user) %>
                <%= link_to "User Settings", edit_user_path(current_user), class: "btn btn-outline-success" %>
                <% end %>
            </section>
        </aside>
    
    
        <div class="w-100"></div>
        <h3>Dogs</h3>
        <section class="jumbotron">
            <% if @user.dogs.any? %>
                <ul class="dogs">
                    <%= render @dogs %>
                </ul>
            <% end %>
            <br>
            <% if @user.dogs.any? && current_user?(@user) %>
                <h5><%= link_to "Add my dog", dogsnew_path, class: "btn btn-outline-success" %></h5>
            <% elsif !@user.dogs.any? && current_user?(@user) %>
                <h4><%= link_to "Add first dog information!!!", dogsnew_path, class: "btn btn-outline-success" %></h4>
            <% end %>
        </section>
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
        <h3>投稿(<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
            <%= render @microposts %>
        </ol>
        <% end %>
    </div>
</div>