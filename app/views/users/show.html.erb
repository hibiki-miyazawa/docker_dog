<% provide(:title, @user.name) %>
<div class="row">
    
    <aside class="col-md-4">
        <section>
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <% if current_user.admin? && !current_user?(@user)%>
            <%= link_to "delete user", @user, method: :delete, data: {confirm: "You sure?"} %>
            <% elsif !current_user.admin? && current_user?(@user) %>
            <%= link_to "delete user", @user, method: :delete, data: {confirm: "You sure?"} %>
            <% end %>
        </section>
    </aside>
    <div class="w-100"></div>
    <div>
        <% if @user.dogs.any? %>
            <h3>Dogs</h3>
            <ul class="dogs">
                <%= render @dogs %>
            </ul>
        <% end %>
        <% if @user.dogs.any? && current_user?(@user) %>
            <h5><%= link_to "Add my dog", dogsnew_path %></h5>
        <% elsif !@user.dogs.any? && current_user?(@user) %>
            <h4><%= link_to "Add first dog information!!!", dogsnew_path %></h4>
        <% end %>
    </div>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
        <h3>投稿(<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
            <%= render @microposts %>
        </ol>
        <% end %>
    </div>
</div>