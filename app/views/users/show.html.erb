<% provide(:title, @user.name) %>
<div>
    <aside>
        <section>
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
    </aside>
    <div>
        <% if @user.microposts.any? %>
        <h3>投稿(<%= @user.microposts.count %>)</h3>
        <ol>
            <%= render @microposts %>
        </ol>
        <% end %>
    </div>
</div>